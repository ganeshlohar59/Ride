<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">#000</item>
        <item name="colorPrimaryDark">#ffff</item>
        <item name="colorAccent">#000</item>
        <item name="android:homeAsUpIndicator">@drawable/ic_left_arrow</item>
        <item name="android:fontFamily" tools:targetApi="jelly_bean">@font/poppins_medium</item>
        <item name="android:elevation" tools:targetApi="lollipop">0dp</item>
        <item name="android:windowActivityTransitions" tools:targetApi="lollipop">true</item>
        <item name="android:statusBarColor" tools:targetApi="lollipop">#ffff</item>
        <item name="android:windowLightStatusBar" tools:targetApi="m">true</item>
    </style>

    <style name="SignUpTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">#000000</item>
        <item name="colorPrimaryDark">#ffff</item>
        <item name="colorAccent">#000000</item>
        <item name="android:windowLightStatusBar" tools:targetApi="m">true</item>
        <item name="android:windowTranslucentStatus" tools:targetApi="kitkat">true</item>
        <item name="android:homeAsUpIndicator">@drawable/ic_left_arrow</item>
        <item name="android:fontFamily" tools:targetApi="jelly_bean">@font/poppins</item>
        <item name="android:textColorSecondary">@color/white</item>
        <item name="android:elevation" tools:targetApi="lollipop">0dp</item>
    </style>

    <style name="RatingBar">
        <item name="colorControlNormal">#AAAAAA</item>
        <item name="colorControlActivated">#000000</item>
        <item name="colorControlHighlight">#AAAAAA</item>
    </style>


    <style name="SplashTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowBackground">@drawable/splashscreen</item>
    </style>



</resources>
